include ./news-statistics.pug

mixin news()
    template#news
        style 
            include:scss ./news.scss
            include:scss ./news-statistics.scss
            include:scss ../buttons/button.scss
            
        .news
            h2#title.news__title
            .news__author-comment-section
                slot(name="author-comment")
            .news__controllers
                +newsStatistics()
                button#comment-button.button Comment
            .news__sources
                a#source.news__source(href='#' target="_blank" title='$')
                    <svg class="news__source-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 17H6C3.23858 17 1 14.7614 1 12V12C1 9.23858 3.23858 7 6 7H9" stroke="#FFFFFF" stroke-width="1.95" stroke-linecap="round"/>
                        <path d="M14 17H18C20.7614 17 23 14.7614 23 12V12C23 9.23858 20.7614 7 18 7H14" stroke="#FFFFFF" stroke-width="1.95" stroke-linecap="round"/>
                        <line x1="6.75" y1="12.25" x2="17.25" y2="12.25" stroke="#FFFFFF" stroke-width="1.95" stroke-linecap="round"/>
                    </svg>
